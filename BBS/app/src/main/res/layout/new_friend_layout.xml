<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/new_friend_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00BFFF">

        <ImageView
            android:id="@+id/new_friend_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/selector_mapback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="新的朋友"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_friend_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/new_friend_title_layout">

        <EditText
            android:id="@+id/new_friend_edit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/new_friend_bt"
            android:background="@color/cutTextview"
            android:hint="请输入好友用户名" />

        <ImageView
            android:id="@+id/new_friend_bt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@mipmap/search" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/search_friend_layout"
        android:background="@drawable/ease_mm_listitem"
        android:duplicateParentState="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:scaleType="fitXY"
            android:src="@mipmap/em_default_avatar" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/avatar"
            android:textColor="#0F0F0F"
            android:textSize="16sp" />


        <Button
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:background="@drawable/em_button_bg"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/button_add"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:textColor="@color/cutline" />

        <TextView
            android:id="@+id/nearby_busdetailA"
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:background="@color/cutTextview" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/strbuslayoutC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strbuslayoutB"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/settingItem">


        <ImageView
            android:id="@+id/busC_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:src="@mipmap/setting_in" />

        <TextView
            android:id="@+id/nearby_busC"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:textColor="@color/cutline" />

        <TextView
            android:id="@+id/nearby_busdetailC"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/nearby_busC"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/nearby_busC"
            android:background="@color/cutTextview" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/strbuslayoutD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strbuslayoutC"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/settingItem">


        <ImageView
            android:id="@+id/busD_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
